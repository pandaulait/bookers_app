<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clospan=3></th>
      </tr>
    </thead>
    <tbody>
      <%@books.each do |book|%>
      <tr>
        <td><%=book.title %></td>
        <td><%=book.body %></td>
        <td><%=link_to 'show',book_path(book)%></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%=link_to 'destroy',book_path(book), method: :delete%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>



  <div class="Newbook">
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <div class="submitbuttom"><%= f.submit 'Create book' %></div>

  </div>


<% end %>